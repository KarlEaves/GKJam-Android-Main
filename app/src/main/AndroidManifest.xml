<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karl.gux.gkjam">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ListenerActivity" />
        <activity android:name=".Activities.ScalesDescriptionActivity" />

        <activity
            android:name=".Activities.NewToScalesActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <activity
            android:name=".Activities.PrintScalesActivity"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity android:name=".Activities.IndividualScaleActivity"></activity>
    </application>

</manifest>